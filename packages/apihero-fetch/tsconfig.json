{
  "include": ["src/**/*.ts", "tsup.config.ts"],
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "noEmit": true,
    "lib": ["es2017", "webworker"]
  },
  "exclude": ["node_modules", "**/*.test.*"]
}
