{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "noEmitOnError": true,
    "strict": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "outDir": "dist",
    "sourceMap": true,
    "paths": {
      "internal-logs/*": ["../../packages/internal-logs/src/*"],
      "internal-logs": ["../../packages/internal-logs/src/index"]
    }
  },
  "include": ["src/**/*.ts"]
}
